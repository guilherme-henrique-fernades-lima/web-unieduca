<div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel"
    tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalToggleLabel">Editando Banner Inicial</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="loadModal">
                    <div class="d-flex justify-content-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
                <section class="row g-3 bodyModal">
                    <div class="col-12">
                        <label for="titulo" class="form-label">Titulo</label>
                        <input type="text" class="form-control" id="titulo">
                    </div>
                    <div class="col-12">
                        <label for="texto" class="form-label">Texto</label>
                        <textarea class="form-control" id="texto" rows="5"></textarea>
                    </div>
                    <div class="col-12">
                        <label for="img1" class="form-label">Foto:</label>
                        <div class="d-flex text-center justify-content-center">
                            <img src="" id="preimg1" class="img-fluid w-25" alt="" srcset="">
                        </div>
                        <div class="input-group mt-3 col-md-6">
                            <input type="file" accept="image/*" onchange="previewImg($(this)[0].id,'preimg1')"
                                class="form-control" id="img">
                            <label class="input-group-text" for="img"><i class="bi bi-card-image"></i></label>
                        </div>
                    </div>
                </section>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-success btnModal" onclick="salvar()">Salvar</button>
            </div>
        </div>
    </div>
</div>