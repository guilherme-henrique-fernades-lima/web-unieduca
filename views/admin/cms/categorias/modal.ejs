<div class="modal fade" id="modalCategoria" aria-hidden="true" aria-labelledby="modalCategoriaLabel" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCategoriaLabel">Edição Categorias</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="loadModal">
                    <div class="d-flex justify-content-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
                <section class="row g-3 bodyModal">
                    <input type="hidden" name="categoriaId" id="categoriaId">
                    <div class="col-12">
                        <label for="nome" class="form-label">Insira o nome da categoria</label>
                        <input type="text" class="form-control" id="nome">
                    </div>
                    <div class="col-12">
                        <label for="img" class="form-label">Imagem</label>
                        <div class="d-flex text-center py-2 my-2 justify-content-center">
                            <img src="" id="preimg" class="img-fluid w-25" alt="" srcset="">
                        </div>
                        <input type="file" accept="image/*" onchange="previewImg($(this)[0].id,'preimg')"
                            class="form-control" id="img">
                    </div>
                    <div class="col-12">
                        <label for="descricao" class="form-label">Descrição</label>
                        <textarea  id="descricao" class="form-control"></textarea>
                    </div>
                    <div class="col-12">
                        <label for="status" class="form-label">Status</label>
                        <select name="status" class="form-select" id="status">
                            <option value="true">Ativo</option>
                            <option value="false">Inativo</option>
                        </select>
                    </div>
                </section>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-success btnModal" onclick="salvar()">Salvar</button>
            </div>
        </div>
    </div>
</div>