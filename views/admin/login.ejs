<%- include("../partials/admin/head.ejs")%>
<%- include("../partials/admin/header.ejs")%>
    <main>
        <section id="">
            <div class="container" data-aos="zoom-out">
                <div class="row justify-content-center my-5">
                    <div class="col-md-6">
                        <div class="card">
                            <form action="/admin/login" class="needs-validation" novalidate method="post">
                                <div class="card-header text-white bg-equi py-3 text-center">
                                    <h3>Login de Usu√°rio</h3>
                                </div>
                                <div class="card-body">
                                    <div class="row my-4 justify-content-center">
                                        <div class="col-lg-10 my-2">
                                          <label for="email" class="form-label">Informe seu E-mail *</label>
                                          <div class="input-group">
                                            <span class="input-group-text" id="addon-email"><i class="bi bi-envelope"></i></span>
                                            <input required type="email" value="<%=(email == undefined)?'':email%>" name="email" placeholder="Digite seu e-mail" id="email" class="form-control">
                                            <div class="valid-feedback">
                                                Correto!
                                            </div>
                                            <div class="invalid-feedback">
                                               Por gentileza informar e-mail.
                                            </div>
                                          </div>
                                        </div>
                                        <div class="col-lg-10 my-2">
                                          <label for="senha" class="form-label">Informe sua Senha *</label>
                                          <div class="input-group">
                                            <span class="input-group-text" id="addon-email"><i class="bi bi-person-fill-lock"></i></span>
                                            <input required type="password" name="senha" placeholder="Digite sua senha" id="senha" class="form-control">
                                            <div class="invalid-feedback">
                                                Por gentileza informar senha.
                                             </div>
                                          </div>
                                        </div>
                                        <div class="col-lg-10 my-2">
                                            <a href="/admin/login/esqueceu">Esqueceu a senha?</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer text-center">
                                    <div class="row justify-content-center">
                                        <div class="col-8 my-2">
                                            <button type="submit" class="btn btn-equi form-control">Login</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
<%- include("../partials/script.ejs")%>
<%- include("../partials/end.ejs")%>
