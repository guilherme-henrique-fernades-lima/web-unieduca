<script>
    function pre_view_estrelas(estrela) {
        const estrelas = $('img.estrela-conteudo')
        estrelas.each((i,e)=>{
            if ((i+1) > parseInt(estrela)) {
                e.src = '/img/estrela.png'
            }else{
                e.src = '/img/estrela_preencida.png'
            }
        })
    }
    function click_estrelas(estrela) {
        const estrelas = $('img.estrela-conteudo')
        estrelas.each((i,e)=>{
            if ((i+1) > parseInt(estrela)) {
                e.src = '/img/estrela.png'
            }else{
                e.src = '/img/estrela_preencida.png'
            }
        })
        $('#estrela_valor').val(estrela)
    }
    
    document.querySelectorAll( 'oembed[url]' ).forEach( element => {
