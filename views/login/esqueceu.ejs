<%- include("../partials/head.ejs")%>
<%#- include("../partials/topbar.ejs")%>
<%- include("../partials/header.ejs")%>
    <main>
        <section id="">
            <div class="container" data-aos="zoom-out">
                <div class="row justify-content-center my-5">
                    <div class="col-md-8">
                        <div class="card">
                            <form action="/login/esqueceu/<%=type%>" class="needs-validation" novalidate method="post">
                                <div class="card-header text-white bg-equi py-3 text-center">
                                    <h3>Esqueceu a senha?</h3>
                                    <p>Enviaremos um código no seu e-mail para que você consiga alterar sua senha!</p>
                                </div>
                                <div class="card-body">
                                    <%if(type == 'colaborador'){%>
                                        <div class="row my-4 justify-content-center">
                                            <div class="col-lg-10 my-2">
                                              <label for="login" class="form-label">Informe seu E-mail *</label>
                                              <div class="input-group">
                                                <span class="input-group-text" id="addon-login"><i class="bi bi-envelope"></i></span>
                                                <input required type="email" value="<%=(login == undefined)?'':login%>" name="login" placeholder="Digite seu e-mail" id="login" class="form-control">
                                                <div class="invalid-feedback">
                                                    Por gentileza informar e-mail.
                                                </div>
                                              </div>
                                            </div>
                                            <div class="col-lg-10 my-2">
                                                <a href="/login">Lembrou a senha?</a>
                                            </div>
                                        </div>
                                    <%}else{%>
                                        <div class="row my-4 justify-content-center">
                                            <div class="col-lg-10 my-2">
                                              <label for="login" class="form-label">Informe seu CPF *</label>
                                              <div class="input-group">
                                                <span class="input-group-text" id="addon-login"><i class="bi bi-person-vcard-fill"></i></span>
                                                <input required type="text" value="<%=(login == undefined)?'':login%>" name="login" placeholder="Digite seu CPF" id="login" class="form-control">
                                                <div class="invalid-feedback">
                                                    Por gentileza informar CPF.
                                                </div>
                                              </div>
                                            </div>
                                            <div class="col-lg-10 my-2">
                                                <a href="/login">Lembrou a senha?</a>
                                            </div>
                                        </div>
                                    <%}%>
                                </div>
                                <div class="card-footer text-center">
                                    <div class="row justify-content-center">
                                        <div class="col-8 my-2">
                                            <button type="submit" class="btn btn-equi form-control">Solicitar Código</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
<%- include("../partials/script.ejs")%>
<%- include("../partials/end.ejs")%>
